<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <EditText
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="0"
        android:textSize="50sp"
        android:textStyle="bold"
        android:gravity="center|right"
        android:layout_marginBottom="1pt"
        />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="1pt"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnClear"
                android:layout_width="32pt"
                android:layout_height="32pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:text="C"
                android:onClick="clearEvent"
                ></Button>
            <Button
                android:id="@+id/btnSquared"
                android:layout_width="32pt"
                android:layout_height="32pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:text="x^2"
                android:onClick="operatorEvent"
                ></Button>
            <Button
                android:id="@+id/btnPercent"
                android:layout_width="32pt"
                android:layout_height="32pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:text="%"
                android:onClick="percentEvent"
                ></Button>
            <Button
                android:id="@+id/btnDivide"
                android:layout_width="32pt"
                android:layout_height="32pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:text="/"
                android:onClick="operatorEvent"
                ></Button>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="1pt"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn7"
                android:layout_width="32pt"
                android:layout_height="32pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:text="7"
                android:onClick="numberEvent"
                ></Button>
            <Button
                android:id="@+id/btn8"
                android:layout_width="32pt"
                android:layout_height="32pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:text="8"
                android:onClick="numberEvent"
                ></Button>
            <Button
                android:id="@+id/btn9"
                android:layout_width="32pt"
                android:layout_height="32pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:text="9"
                android:onClick="numberEvent"
                ></Button>
            <Button
                android:id="@+id/btnMultiply"
                android:layout_width="32pt"
                android:layout_height="32pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:text="*"
                android:onClick="operatorEvent"
                ></Button>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="1pt"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn4"
                android:layout_width="32pt"
                android:layout_height="32pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:text="4"
                android:onClick="numberEvent"
                ></Button>
            <Button
                android:id="@+id/btn5"
                android:layout_width="32pt"
                android:layout_height="32pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:text="5"
                android:onClick="numberEvent"
                ></Button>
            <Button
                android:id="@+id/btn6"
                android:layout_width="32pt"
                android:layout_height="32pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:text="6"
                android:onClick="numberEvent"
                ></Button>
            <Button
                android:id="@+id/btnSub"
                android:layout_width="32pt"
                android:layout_height="32pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:text="-"
                android:onClick="operatorEvent"
                ></Button>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="1pt"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn1"
                android:layout_width="32pt"
                android:layout_height="32pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:text="1"
                android:onClick="numberEvent"
                ></Button>
            <Button
                android:id="@+id/btn2"
                android:layout_width="32pt"
                android:layout_height="32pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:text="2"
                android:onClick="numberEvent"
                ></Button>
            <Button
                android:id="@+id/btn3"
                android:layout_width="32pt"
                android:layout_height="32pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:text="3"
                android:onClick="numberEvent"
                ></Button>
            <Button
                android:id="@+id/btnPlus"
                android:layout_width="32pt"
                android:layout_height="32pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:text="+"
                android:onClick="operatorEvent"
                ></Button>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="1pt"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnPlusMinus"
                android:layout_width="32pt"
                android:layout_height="32pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:text="+/-"
                android:onClick="numberEvent"
                ></Button>
            <Button
                android:id="@+id/btn0"
                android:layout_width="32pt"
                android:layout_height="32pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:text="0"
                android:onClick="numberEvent"
                ></Button>
            <Button
                android:id="@+id/btnDot"
                android:layout_width="32pt"
                android:layout_height="32pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:text="."
                android:onClick="numberEvent"
                ></Button>
            <Button
                android:id="@+id/btnEqual"
                android:layout_width="32pt"
                android:layout_height="32pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:text="="
                android:onClick="equalEvent"
                ></Button>
        </TableRow>

    </TableLayout>

</LinearLayout>
